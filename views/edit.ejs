<%- include('./partials/header.ejs') %>

<title>Edit</title>
</head>

<div class="box">
    <div class="add">
        <h1 class="h-1">Add New Student</h1>
        <div>
            <form action="/update/<%=result._id%>" method="post">
                <div class="m-5">
                    <label for="name" id="name-label">Name</label>
                    <input type="text" name="name" id="name" required value="<%= result.name %>">
                </div>
                <div class="m-5" >
                    <label for="age" id="age-label">Age</label>
                    <input type="number" name="age" id="age" required min="18" max="60" value="<%= result.age%>">
                </div>
                <div class="m-5">
                    <label for="fees" id="fee-label">Fees</label>
                    <input type="number" name="fees" id="fees" required min="5000" value="<%= result.fees %>">
                </div>
                <button type="submit" class="btn">Add</button>
            </form>
        </div>
    </div>
</div>

